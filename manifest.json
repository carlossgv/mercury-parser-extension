{
  "manifest_version": 3,
  "name": "Mercury Parser Extension",
  "version": "1.0",
  "description": "Send the current URL to Mercury parser and open a new tab with the parsed response.",
  "permissions": [
    "activeTab",
    "tabs", "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
